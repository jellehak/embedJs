{
    "extends": "@tsconfig/recommended",
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES2021",
        "lib": ["ES2021", "ES2022.Object", "DOM"],
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "docs"]
}
